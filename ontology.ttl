@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <https://schema.org/> .
@prefix ds: <http://darksouls.ontology/> .

# Ontology Declaration
ds: a owl:Ontology ;
    rdfs:label "Dark Souls Game Ontology" ;
    rdfs:comment "An ontology modeling the mechanics, items, characters, and world of Dark Souls" ;
    owl:versionInfo "1.0" .

# ============================================
# CLASSES
# ============================================

# Root Item Class
ds:Item a owl:Class ;
    rdfs:label "Item" ;
    rdfs:comment "Any obtainable object in the game world" .

# Equipment Classes
ds:Equipment a owl:Class ;
    rdfs:subClassOf ds:Item ;
    rdfs:label "Equipment" ;
    rdfs:comment "Wearable or usable gear" .

ds:Weapon a owl:Class ;
    rdfs:subClassOf ds:Equipment ;
    rdfs:label "Weapon" ;
    rdfs:comment "Offensive equipment" .

ds:Melee a owl:Class ;
    rdfs:subClassOf ds:Weapon ;
    rdfs:label "Melee Weapon" ;
    rdfs:comment "Close-range weapons" .

ds:Ranged a owl:Class ;
    rdfs:subClassOf ds:Weapon ;
    rdfs:label "Ranged Weapon" ;
    rdfs:comment "Distance weapons" .

ds:Armor a owl:Class ;
    rdfs:subClassOf ds:Equipment ;
    rdfs:label "Armor" ;
    rdfs:comment "Defensive equipment" .

ds:Shield a owl:Class ;
    rdfs:subClassOf ds:Equipment ;
    rdfs:label "Shield" ;
    rdfs:comment "Blocking equipment" .

ds:Ring a owl:Class ;
    rdfs:subClassOf ds:Equipment ;
    rdfs:label "Ring" ;
    rdfs:comment "Accessory equipment" .

# Consumable Items
ds:Consumable a owl:Class ;
    rdfs:subClassOf ds:Item ;
    rdfs:label "Consumable" ;
    rdfs:comment "Single-use or limited-use items" .

ds:UpgradeMaterial a owl:Class ;
    rdfs:subClassOf ds:Item ;
    rdfs:label "Upgrade Material" ;
    rdfs:comment "Items used to enhance equipment" .

ds:KeyItem a owl:Class ;
    rdfs:subClassOf ds:Item ;
    rdfs:label "Key Item" ;
    rdfs:comment "Quest and progression items" .

ds:BossSoul a owl:Class ;
    rdfs:subClassOf ds:Item ;
    rdfs:label "Boss Soul" ;
    rdfs:comment "Special items dropped by bosses" .

# Character Classes
ds:Boss a owl:Class ;
    rdfs:label "Boss" ;
    rdfs:comment "Major enemies with unique souls and mechanics" .

ds:NPC a owl:Class ;
    rdfs:label "NPC" ;
    rdfs:comment "Non-player characters" .

ds:Vendor a owl:Class ;
    rdfs:subClassOf ds:NPC ;
    rdfs:label "Vendor" ;
    rdfs:comment "NPCs who sell items" .

ds:QuestGiver a owl:Class ;
    rdfs:subClassOf ds:NPC ;
    rdfs:label "Quest Giver" ;
    rdfs:comment "NPCs who provide quests" .

ds:Summon a owl:Class ;
    rdfs:subClassOf ds:NPC ;
    rdfs:label "Summon" ;
    rdfs:comment "NPCs who can be summoned for assistance" .

ds:HostileNPC a owl:Class ;
    rdfs:subClassOf ds:NPC ;
    rdfs:label "Hostile NPC" ;
    rdfs:comment "NPCs who attack the player" .

ds:Enemy a owl:Class ;
    rdfs:label "Enemy" ;
    rdfs:comment "Regular hostile creatures" .

# World Classes
ds:Area a owl:Class ;
    rdfs:label "Area" ;
    rdfs:comment "Geographic locations in the game world" .

ds:Covenant a owl:Class ;
    rdfs:label "Covenant" ;
    rdfs:comment "Factions players can join" .

# Magic Classes
ds:Spell a owl:Class ;
    rdfs:label "Spell" ;
    rdfs:comment "Magic abilities" .

ds:Sorcery a owl:Class ;
    rdfs:subClassOf ds:Spell ;
    rdfs:label "Sorcery" ;
    rdfs:comment "Intelligence-based magic" .

ds:Miracle a owl:Class ;
    rdfs:subClassOf ds:Spell ;
    rdfs:label "Miracle" ;
    rdfs:comment "Faith-based magic" .

ds:Pyromancy a owl:Class ;
    rdfs:subClassOf ds:Spell ;
    rdfs:label "Pyromancy" ;
    rdfs:comment "Fire-based magic" .

# Upgrade System Classes
ds:UpgradePath a owl:Class ;
    rdfs:label "Upgrade Path" ;
    rdfs:comment "Weapon enhancement routes" .

ds:DamageType a owl:Class ;
    rdfs:label "Damage Type" ;
    rdfs:comment "Categories of damage" .

# Enumeration Classes
ds:ArmorSlot a owl:Class ;
    rdfs:label "Armor Slot" ;
    rdfs:comment "Body parts where armor can be equipped" .

# ============================================
# DEFINED CLASSES (Union, Intersection, Complement)
# ============================================

# Union: Equipment is exactly the union of Weapon, Armor, Shield, and Ring
ds:Equipment owl:equivalentClass [
    a owl:Class ;
    owl:unionOf (ds:Weapon ds:Armor ds:Shield ds:Ring)
] .

# Intersection: Magic Weapon is a Weapon with intelligence requirement
ds:MagicWeapon a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            ds:Weapon
            [ a owl:Restriction ;
              owl:onProperty ds:intelligenceRequirement ;
              owl:someValuesFrom xsd:integer ]
        )
    ] ;
    rdfs:label "Magic Weapon" ;
    rdfs:comment "Weapons that require intelligence to wield" .

# Intersection: Purchasable Equipment
ds:PurchasableEquipment a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            ds:Equipment
            [ a owl:Restriction ;
              owl:onProperty ds:soldBy ;
              owl:someValuesFrom ds:NPC ]
        )
    ] ;
    rdfs:label "Purchasable Equipment" ;
    rdfs:comment "Equipment that can be purchased from NPCs" .

# Complement: Unique Equipment (NOT sold by any NPC)
ds:UniqueEquipment a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            ds:Equipment
            [ a owl:Class ;
              owl:complementOf [
                  a owl:Restriction ;
                  owl:onProperty ds:soldBy ;
                  owl:someValuesFrom ds:NPC
              ]
            ]
        )
    ] ;
    rdfs:label "Unique Equipment" ;
    rdfs:comment "Equipment that cannot be purchased from any NPC" .

# Complement: Non-Upgradable Weapon
ds:NonUpgradableWeapon a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            ds:Weapon
            [ a owl:Class ;
              owl:complementOf [
                  a owl:Restriction ;
                  owl:onProperty ds:upgradesTo ;
                  owl:someValuesFrom ds:Weapon
              ]
            ]
        )
    ] ;
    rdfs:label "Non-Upgradable Weapon" ;
    rdfs:comment "Weapons that cannot be upgraded" .

# Intersection: Faith-based Weapon
ds:FaithWeapon a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            ds:Weapon
            [ a owl:Restriction ;
              owl:onProperty ds:faithRequirement ;
              owl:someValuesFrom xsd:integer ]
        )
    ] ;
    rdfs:label "Faith Weapon" ;
    rdfs:comment "Weapons that require faith to wield" .

# ============================================
# ENUMERATIONS
# ============================================

# Armor Slot Enumeration
ds:ArmorSlot owl:equivalentClass [
    a owl:Class ;
    owl:oneOf (ds:Head ds:Chest ds:Hands ds:Legs)
] .

ds:Head a ds:ArmorSlot ;
    rdfs:label "Head Slot" .

ds:Chest a ds:ArmorSlot ;
    rdfs:label "Chest Slot" .

ds:Hands a ds:ArmorSlot ;
    rdfs:label "Hands Slot" .

ds:Legs a ds:ArmorSlot ;
    rdfs:label "Legs Slot" .

# Upgrade Type Enumeration
ds:UpgradeType a owl:Class ;
    rdfs:label "Upgrade Type" .

ds:UpgradeType owl:equivalentClass [
    a owl:Class ;
    owl:oneOf (ds:Normal ds:Fire ds:Lightning ds:Divine ds:Occult ds:Magic ds:Enchanted ds:Chaos ds:Crystal)
] .

ds:Normal a ds:UpgradeType ;
    rdfs:label "Normal Upgrade" .

ds:Fire a ds:UpgradeType ;
    rdfs:label "Fire Upgrade" .

ds:Lightning a ds:UpgradeType ;
    rdfs:label "Lightning Upgrade" .

ds:Divine a ds:UpgradeType ;
    rdfs:label "Divine Upgrade" .

ds:Occult a ds:UpgradeType ;
    rdfs:label "Occult Upgrade" .

ds:Magic a ds:UpgradeType ;
    rdfs:label "Magic Upgrade" .

ds:Enchanted a ds:UpgradeType ;
    rdfs:label "Enchanted Upgrade" .

ds:Chaos a ds:UpgradeType ;
    rdfs:label "Chaos Upgrade" .

ds:Crystal a ds:UpgradeType ;
    rdfs:label "Crystal Upgrade" .

# Damage Type Enumeration
ds:DamageType owl:equivalentClass [
    a owl:Class ;
    owl:oneOf (ds:PhysicalDamage ds:MagicDamage ds:FireDamage ds:LightningDamage ds:DivineDamage ds:OccultDamage)
] .

ds:PhysicalDamage a ds:DamageType ;
    rdfs:label "Physical Damage" .

ds:MagicDamage a ds:DamageType ;
    rdfs:label "Magic Damage" .

ds:FireDamage a ds:DamageType ;
    rdfs:label "Fire Damage" .

ds:LightningDamage a ds:DamageType ;
    rdfs:label "Lightning Damage" .

ds:DivineDamage a ds:DamageType ;
    rdfs:label "Divine Damage" .

ds:OccultDamage a ds:DamageType ;
    rdfs:label "Occult Damage" .

# ============================================
# OBJECT PROPERTIES
# ============================================

# Item Acquisition Properties
ds:droppedBy a owl:ObjectProperty ;
    rdfs:label "dropped by" ;
    rdfs:comment "Indicates which character drops this item" ;
    rdfs:domain ds:Item ;
    rdfs:range [ a owl:Class ;
                 owl:unionOf (ds:Boss ds:Enemy ds:NPC) ] .

ds:soldBy a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "sold by" ;
    rdfs:comment "Indicates which NPC sells this item" ;
    rdfs:domain ds:Item ;
    rdfs:range ds:NPC .

ds:foundIn a owl:ObjectProperty ;
    rdfs:label "found in" ;
    rdfs:comment "Indicates which area contains this item" ;
    rdfs:domain ds:Item ;
    rdfs:range ds:Area .

# Weapon Upgrade Properties
ds:upgradesTo a owl:ObjectProperty, owl:TransitiveProperty ;
    rdfs:label "upgrades to" ;
    rdfs:comment "Indicates the next level in weapon upgrade progression" ;
    rdfs:domain ds:Weapon ;
    rdfs:range ds:Weapon .

ds:requiresItem a owl:ObjectProperty ;
    rdfs:label "requires item" ;
    rdfs:comment "Indicates which upgrade material is needed" ;
    rdfs:domain ds:UpgradePath ;
    rdfs:range ds:UpgradeMaterial .

# Location Properties
ds:locatedIn a owl:ObjectProperty, owl:FunctionalProperty ;
    rdfs:label "located in" ;
    rdfs:comment "Indicates the primary location of a character" ;
    rdfs:domain [ a owl:Class ;
                  owl:unionOf (ds:NPC ds:Boss ds:Enemy) ] ;
    rdfs:range ds:Area .

ds:connectsTo a owl:ObjectProperty, owl:SymmetricProperty ;
    rdfs:label "connects to" ;
    rdfs:comment "Indicates that two areas are directly connected" ;
    rdfs:domain ds:Area ;
    rdfs:range ds:Area .

# Covenant Property
ds:memberOfCovenant a owl:ObjectProperty ;
    rdfs:label "member of covenant" ;
    rdfs:comment "Indicates which covenant an NPC belongs to" ;
    rdfs:domain ds:NPC ;
    rdfs:range ds:Covenant .

# Boss Weakness/Resistance Properties
ds:weakTo a owl:ObjectProperty ;
    rdfs:label "weak to" ;
    rdfs:comment "Indicates a damage type the boss is vulnerable to" ;
    rdfs:domain ds:Boss ;
    rdfs:range ds:DamageType .

ds:resistantTo a owl:ObjectProperty ;
    rdfs:label "resistant to" ;
    rdfs:comment "Indicates a damage type the boss resists" ;
    rdfs:domain ds:Boss ;
    rdfs:range ds:DamageType .

# Spell Learning Property
ds:taughtBy a owl:ObjectProperty ;
    rdfs:label "taught by" ;
    rdfs:comment "Indicates which NPC teaches this spell" ;
    rdfs:domain ds:Spell ;
    rdfs:range ds:NPC .

# NPC Upgrade Service Property
ds:performsUpgrade a owl:ObjectProperty ;
    rdfs:label "performs upgrade" ;
    rdfs:comment "Indicates which upgrade path an NPC can perform" ;
    rdfs:domain ds:NPC ;
    rdfs:range ds:UpgradePath .

# Boss Soul Drop Property
ds:drops a owl:ObjectProperty, owl:InverseFunctionalProperty ;
    rdfs:label "drops" ;
    rdfs:comment "Indicates which boss soul is dropped" ;
    rdfs:domain ds:Boss ;
    rdfs:range ds:BossSoul .

