# ============================================
# CLASS RESTRICTIONS AND AXIOMS
# ============================================

# Every Boss drops exactly one Boss Soul
ds:Boss rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:drops ;
    owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
    owl:onClass ds:BossSoul
] .

# Every Upgrade Path requires at least one Upgrade Material
ds:UpgradePath rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:requiresItem ;
    owl:minQualifiedCardinality "1"^^xsd:nonNegativeInteger ;
    owl:onClass ds:UpgradeMaterial
] .

# Weapons can only upgrade to other Weapons
ds:Weapon rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:upgradesTo ;
    owl:allValuesFrom ds:Weapon
] .

# Bosses are only weak to Damage Types
ds:Boss rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:weakTo ;
    owl:allValuesFrom ds:DamageType
] .

# Bosses are only resistant to Damage Types
ds:Boss rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:resistantTo ;
    owl:allValuesFrom ds:DamageType
] .

# Boss Souls can only be dropped by Bosses
ds:BossSoul rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty [ owl:inverseOf ds:drops ] ;
    owl:allValuesFrom ds:Boss
] .

# NPCs must be located in exactly one Area
ds:NPC rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:locatedIn ;
    owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
    owl:onClass ds:Area
] .

# Bosses must be located in exactly one Area
ds:Boss rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:locatedIn ;
    owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
    owl:onClass ds:Area
] .

# Spells can only be taught by NPCs
ds:Spell rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:taughtBy ;
    owl:allValuesFrom ds:NPC
] .

# Items can only be sold by Vendors (subclass of NPC)
ds:Item rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:soldBy ;
    owl:allValuesFrom ds:Vendor
] .

# Equipment must have a weight value
ds:Equipment rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:weight ;
    owl:someValuesFrom xsd:decimal
] .

# Weapons must have at least one damage value
ds:Weapon rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:physicalDamage ;
    owl:minCardinality "0"^^xsd:nonNegativeInteger
] .

# Areas can connect to multiple other Areas
ds:Area rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ds:connectsTo ;
    owl:minCardinality "1"^^xsd:nonNegativeInteger
] .

# ============================================
# DISJOINT CLASSES
# ============================================

# Equipment subtypes are disjoint
[] a owl:AllDisjointClasses ;
   owl:members (ds:Weapon ds:Armor ds:Shield ds:Ring) .

# Item subtypes are disjoint
[] a owl:AllDisjointClasses ;
   owl:members (ds:Equipment ds:Consumable ds:UpgradeMaterial ds:KeyItem ds:BossSoul) .

# Weapon types are disjoint
[] a owl:AllDisjointClasses ;
   owl:members (ds:Melee ds:Ranged) .

# Spell types are disjoint
[] a owl:AllDisjointClasses ;
   owl:members (ds:Sorcery ds:Miracle ds:Pyromancy) .

# Character classes are disjoint
[] a owl:AllDisjointClasses ;
   owl:members (ds:Boss ds:NPC ds:Enemy) .

# NPC types are disjoint
